/**
 * 
 */
package testcases.ui;

import org.eclipse.jface.viewers.ITreeContentProvider;
import org.eclipse.jface.viewers.TreeViewer;
import org.eclipse.jface.viewers.Viewer;

import testcases.RSLMockModel;
import testcases.RSLTestFile;

/**
 * @author Marieta V. Fasie
 * 	marietafasie at gmail dot com
 *
 */
public class TestCaseContentProvider implements ITreeContentProvider{

	private RSLMockModel model;
	private TreeViewer viewer;
	
	private static TestCaseContentProvider instance = null;
	
	public TestCaseContentProvider(){
		instance = this;
		System.out.println(this);
	}
	
	public static TestCaseContentProvider getInstance(){
		System.out.println(instance);
		return instance;
		
	}
	
	@Override
	public void dispose() {
	}

	@Override
	public void inputChanged(Viewer viewer, Object oldInput, Object newInput) {
		System.out.println(this.getClass()+" inputChanged");
		this.model = (RSLMockModel) newInput;
	}

	@Override
	public Object[] getElements(Object inputElement) {
		System.out.println(this.getClass()+" getElements");
		
		return model.getRSLTestFiles().toArray();
		
	}

	@Override
	public Object[] getChildren(Object parentElement) {
		System.out.println(this.getClass()+" getChildern for "+parentElement);
	    if (parentElement instanceof RSLTestFile) {
	      RSLTestFile testfile = (RSLTestFile) parentElement;
	      return testfile.getTestCases().toArray();
	    }
	   
	    return null;
	  }

	@Override
	public Object getParent(Object element) {
		return null;
	}

	@Override
	public boolean hasChildren(Object element) {
		if (element instanceof RSLTestFile) {
			return true;
		}
		return false;
	}
	
	public void setViewer(TreeViewer treeViewer){
		this.viewer = treeViewer;
	}

	public void addFile(RSLTestFile rslfile) {
		Object model = viewer.getInput();
		if(model instanceof RSLMockModel){
			System.out.println("RSL file added to view");
			viewer.add(model, rslfile);
		}
	}

	public RSLMockModel getModel() {
		return this.model;
	}


}
